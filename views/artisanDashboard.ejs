<%- include('partials/header') %>

<style>
/* Page Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 20px;
    color: #333;
}

h1, h2 {
    color: #4CAF50;
    text-align: center;
    margin-bottom: 20px;
}

/* Form Styles */
form {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    max-width: 400px;
    margin: 0 auto 40px auto;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

form input, form textarea {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 14px;
    width: 100%;
}

form textarea {
    resize: vertical;
    min-height: 60px;
}

form button {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s, transform 0.2s;
}

form button:hover {
    background-color: #45a049;
    transform: scale(1.05);
}

/* Product Cards */
ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

li {
    background-color: white;
    width: 250px;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    padding: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform 0.2s;
}

li:hover {
    transform: translateY(-5px);
}

li img {
    width: 150px;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 10px;
}

li strong {
    font-size: 18px;
    color: #333;
}

li p {
    font-size: 14px;
    color: #555;
    text-align: center;
    margin: 10px 0 0 0;
}
</style>

<h1>Artisan Dashboard</h1>

<h2>Add a New Product</h2>
<form action="/artisan/add-product" method="POST">
    <input type="text" name="name" placeholder="Product Name" required>
    <input type="number" name="price" placeholder="Price" required>
    <textarea name="description" placeholder="AI Story / Video Placeholder"></textarea>
    <button type="submit">Add Product</button>
</form>

<h2>Uploaded Products</h2>
<ul>
    <% products.forEach(p => { %>
        <li>
            <img src="<%= p.image %>" alt="<%= p.name %>">
            <strong><%= p.name %></strong> - â‚¹<%= p.price %>
            <p><%= p.description %></p>
        </li>
    <% }) %>
</ul>

<%- include('partials/footer') %>
