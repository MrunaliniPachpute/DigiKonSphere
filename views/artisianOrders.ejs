<style>
  .orders-section{
    display: flex;
    margin: 5px;
    flex-wrap: wrap;
  }
.order-card {
  background: #ffffff;
  margin: 10px;
  border-radius: 14px;
  padding: 20px;
  margin-bottom: 20px;
  border: 1px solid #e5e5e5;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  transition: all 0.25s ease;
  width:300px;
}

.order-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
}

.order-card p {
  margin: 6px 0;
  font-size: 0.95rem;
  color: #333;
}

.order-card h5 {
  margin-top: 10px;
  font-size: 1rem;
  color: #444;
}

.product-summary {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 8px;
  padding: 6px 10px;
  background: #f9f9f9;
  border-radius: 8px;
}

.product-summary img {
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 8px;
}

.btn-ship {
  background: linear-gradient(135deg, #2196f3, #1976d2);
  color: #fff;
  border: none;
  border-radius: 10px;
  padding: 10px 18px;
  font-size: 0.95rem;
  font-weight: 500;
  cursor: pointer;
  margin-top: 12px;
  transition: all 0.25s ease;
}

.btn-ship:hover {
  background: linear-gradient(135deg, #1e88e5, #1565c0);
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
}

.order-card p strong:contains("Pending") {
  color: #f57c00;
  font-weight: 600;
}
</style>
<div class="dashboard-container">
  <h3 class="dashboard-title"><%= currentUser.username %>'s Orders</h3>

  <div class="orders-section">
    <% if (orders && orders.length > 0) { %>
      <% orders.forEach(order => { %>
        <div class="order-card">
          <p><strong>Order ID:</strong> <%= order._id %></p>
          <p><strong>Tracking ID:</strong> <%= order.trackingId %></p>
          <p><strong>Buyer:</strong> <%= order.user.username %></p>
          <p><strong>Status:</strong> <%= order.status %></p>
          <p><strong>Total Amount:</strong> ₹<%= order.totalAmount %></p>

          <h5>Products:</h5>
          <% order.items.forEach(item => { %>
            <% if(item.product && item.product.owner.toString() === currentUser._id.toString()){ %>
              <div class="product-summary">
                <img src="<%= item.product.image %>" width="60" />
                <span><%= item.product.name %> × <%= item.quantity %></span>
              </div>
            <% } %>
          <% }) %>

          <% if (order.status === "Pending") { %>
            <form action="/artisian/order/ship/<%= order._id %>" method="POST">
              <div style="display: flex; align-items: baseline; ">
              <button type="submit" class="btn-ship">Ship Order</button>
              <p type="submit" style="margin-left: 3px; color: white;" class="btn-ship">Cancel Order</p>
              </div>
            </form>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p class="no-orders">No orders for your products yet.</p>
    <% } %>
  </div>
</div>
