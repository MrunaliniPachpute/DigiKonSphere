<%- include('partials/header') %>

<style>
/* Page Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 20px;
    color: #333;
}

h1 {
    color: #4CAF50;
    text-align: center;
    margin-bottom: 20px;
}

/* Orders List */
ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

li {
    background-color: white;
    width: 300px;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    padding: 15px;
    transition: transform 0.2s;
}

li:hover {
    transform: translateY(-5px);
}

li div {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

/* Status Styling */
#status {
    font-weight: bold;
    font-size: 16px;
}

/* Cancel Button */
button.cancel-btn {
    background-color: #f44336; /* Red */
    margin-top: 10px;
    padding: 8px;
    border-radius: 6px;
    cursor: pointer;
    color: white;
    font-weight: 600;
    border: none;
    transition: background-color 0.3s, transform 0.2s;
}

button.cancel-btn:hover {
    background-color: #d32f2f;
    transform: scale(1.05);
}
</style>

<h1>Order History</h1>

<ul>
    <% orders.forEach(o => { %>
        <li>
            <div>
                <strong>Order ID:</strong> <%= o.orderId %>
                <strong>Product:</strong> <%= o.name %>
                <strong>Status:</strong> 
                <span id="status" style="color: <%= o.status === 'success' ? 'green' : 'red' %>;">
                    <%= o.status %>
                </span>

                <!-- Cancel Order Form -->
                <% if(o.status === 'success') { %>
                <form action="/order-history/cancel/<%= o.orderId %>" method="POST">
                    <button class="cancel-btn" type="submit">Cancel Order</button>
                </form>
                <% } %>
            </div>
        </li>
    <% }) %>
</ul>

<%- include('partials/footer') %>
