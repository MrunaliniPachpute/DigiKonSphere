<div class="signup-container">
    <h2>Login Artisian Account</h2>
    <form action="/artisian/login" method="POST">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" placeholder="Sophia@gmail.com" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Sophia@123" required />
      </div>

      <button type="submit" class="signup-btn">Login</button>
      <p class="login-link">
        Login as an User? <a href="/user/login">Login</a>
      </p>
      <p class="login-link">
        Don't have an account? <a href="/artisian/signUp">Sign Up</a>
      </p>
    </form>
  </div>