<%- include('partials/header') %>

<style>
/* Marketplace Page */
body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 20px;
    color: #333;
}

h1 {
    color: #4CAF50;
    text-align: center;
    margin-bottom: 20px;
}

ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

li {
    background-color: white;
    width: 250px;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    padding: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform 0.2s;
}

li:hover {
    transform: translateY(-5px);
}

li img {
    width: 150px;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 10px;
}

li strong {
    font-size: 18px;
    color: #333;
}

li p {
    font-size: 14px;
    color: #555;
    text-align: center;
    margin: 10px 0;
}

button {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s, transform 0.2s;
}

button:hover {
    background-color: #45a049;
    transform: scale(1.05);
}
</style>

<h1>Marketplace</h1>

<ul>
    <% products.forEach(p => { %>
        <li>
            <img src="<%= p.image %>" alt="<%= p.name %>">
            <strong><%= p.name %></strong> - â‚¹<%= p.price %>
            <p><%= p.description %></p>
            <form action="/marketplace/order/<%= p.id %>" method="POST">
                <button type="submit">Order</button>
            </form>
        </li>
    <% }) %>
</ul>

<%- include('partials/footer') %>
